{{> header}}

<div class="box">
  <h1 class="title is-4">Profile</h1>
</div>

{{#if currentUser }}
	{{#ifvalue currentUser.id user.id }}

	<div class="box">
		<article class="message is-info">
			<div class="message-body">
				<a href="/edit" class="pull-right">Edit your profile</a>
			</div>
		</article>
	</div>

	{{/ifvalue}}
{{/if}}

<div class="box">
	<article class="media">
		<div class="media-left">
			<figure class="image is-128x128">
				<img src="https://bulma.io/images/placeholders/128x128.png" alt="Image">
			</figure>
		</div>
		<div class="media-content">
			<div class="content">
				<p>
					<strong>
						{{#if user.displayName }}
							{{ user.displayName }}
						{{else }}
							{{ user.username }}
				   	{{/if }}
				</strong>

					{{#if user.bio }}
						<br>
						{{user.bio}}
					{{/if}}

				</p>
			</div>
			<nav class="level is-mobile">
				<div class="level-left">
					<a class="level-item" aria-label="address-book">
						<span class="icon is-small">
							<i class="fas fa-address-book" aria-hidden="true"></i>
						</span>
					</a>
				</div>
			</nav>
		</div>
	</article>
</div>

{{> footer}}
